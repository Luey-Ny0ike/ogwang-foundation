<div class="container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <h3>PERSONAL DETAILS</h3>
    <div class="field col-md-8">
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name, class:"form-control" %>
    </div>

    <div class="field col-md-8">
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name, class:"form-control" %>
    </div>

    <div class="field col-md-8">
      <%= f.label :institution %><br>
      <%= f.text_field :institution, class:"form-control" %>
    </div>

    <div class="field col-md-8">
      <%= f.label :gender %>
      <%= f.select :gender, ["male", "Female"], blank: true , class:"form-control"%>
    </div>

    <div class="field col-md-8">
      <%= f.label :id_number %><br>
      <%= f.text_field :id_number, class:"form-control" %>
    </div><br>

    <div class="field col-md-8">
      <%= f.label :tell, "Tell us something about yourself in relation to Africa"%><br>
      <%= f.text_area :about, class:"form-control", rows: 12 %>
    </div>
    <hr>
    <h3>ACCOUNT DETAILS</h3>

    <div class="field col-md-8">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>

    <div class="field col-md-8">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
    </div>

    <div class="field col-md-8">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
    </div><br>
    <div class="actions col-md-8">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <br><%= render "users/shared/links" %>

</div>
