<div class="articles-section">
  <div class="grids">
    <br><br>
    <div class="centered-text col-md-12">
      <h2 id="msee">
        <span>ARTICLES</span>
      </h2>
    </div>

    <div class="container actual-articles">
      <% @articles.each do |article| %>
      <%= link_to article_path(article), id:"link" do %>
      <h3 class="article-title"><%= article.title %></h3>
      <div id="p"><%= article.description.first(500).html_safe %><%= link_to '...Read more', article_path(article)%></div>

      <div class="article-image">
        <%= image_tag article.cover_photo.url(:background), class:"img-fluid"%>
      </div>
      <% end %>
      <hr>
      <% end %>
