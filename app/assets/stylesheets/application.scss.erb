@import "bootstrap";

html {
  overflow-y: scroll;
}

body {
  height: 100%;
  margin: 0;
  overflow-x: hidden;
}

.big-logo {
  background-color: white;
  text-align: center;
  margin: -40px;

  #big-l {
    height: 225px;
    width: 312px;
  }
}

nav {
  width: 100%;
  display: inline-block;
  text-align: center;
  padding: 0;
  float: none;
  list-style: none;
  background-color: #ffffff;
  border-bottom: 1px solid #ccc;
  border-top: 1px solid #ccc;
  margin-left: 0;
  // looks like bootstrap is putting a left margin on your #nav you may want it off.
  .nav-link {
    color: black !important;
  }

  .nav-link:hover {
    color: green !important;
  }

  .vf{
    width: auto;
  }
  .navbar-brand{
    margin-left: 10px;
  }
}

nav li {
  display: inline-block;
  text-align: center;
}

@media screen and (max-width: 992px) {
  nav li{
    text-align: left;
  }
  .vf{
    padding-left: 10px;
  }
}
.carousel-item {
  height: 550px;
}

.one {
  background-image: url(<%= asset_path 'first.jpg' %>);
  background-position: center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
}

.two {
  background-image: url(<%= asset_path 'second.jpg' %>);
  background-position: top;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
}

.three {
  background-image: url(<%= asset_path 'third.jpg' %>);
  background-position: center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
}

.projects {
  .main-heading {
    padding-top: 25px;
    text-align: center;
  }
}

.cardo {
  border: 1px solid transparent;
  padding: 2px;
  background: white;
  margin-bottom: 5px;

  .image-main {
    padding-left: 0;
    padding-right: 0;
    height: 308px;
  }

  .content {
    padding-top: 4px;
    height: auto;

    #project-title {
      font-family: 'Lora', serif;
      margin-bottom: 2px;
    }

    #project-category {
      color: grey;
      font-size: 12px;
      font-family: 'Rokkitt', serif;
    }
  }
}

#link {
  color: inherit;
  text-decoration: none;
}

.grids {
  #msee {
    width: 100%;
    text-align: center;
    border-bottom: 1px solid #000;
    line-height: 0.1em;
    margin: 10px 0 20px;
  }

  #msee span {
    background: #fff;
    padding: 0 10px;
  }

  .vitu-zako {
    background-color: lightgrey;
    width: 100%;
    border: 2px solid transparent;
    padding: 100px;
  }

  .home-image {
    width: 100%;
    height: auto;
    padding: 0;

    #image-main {
      height: 307px;
      width: 452px;
    }
  }

  .view-more {
    text-align: center;
    margin: auto;
    display: block;
    padding: 7px;
    background-color: white;
    color: green;
    border: 2px solid green;
  }

  .view-more:hover {
    background-color: green;
    color: white;
  }

  .centered-text {
    text-align: center;
    font-size: 30px;
  }

  .blank-space {
    background-color: green;
    width: 100%;
    height: 10px;
  }

  .row {
    padding: 20px;
  }

  .col-sm-4 {
    border: 1px solid transparent;
    padding: 5px;
  }
}
// MEDIA QUERIES
@media only screen and (max-width: 1000px) {
  .big-logo {
    display: none;
  }
}
